# App Settings
APP_NAME=Tumorra Lay Strategy API
APP_VERSION=1.0.0
DEBUG=true

# API Settings
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","https://*.pages.dev"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tumorra

# Google Cloud
GCP_PROJECT_ID=tumorra-betting-platform
GCP_DATASET_ID=horse_racing_2024
GCP_CREDENTIALS_PATH=/path/to/service-account.json

# BigQuery Tables
BIGQUERY_RACES_TABLE=races
BIGQUERY_RUNNERS_TABLE=runners
BIGQUERY_RESULTS_TABLE=results

# Security
SECRET_KEY=change-this-in-production-to-a-secure-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Strategy Defaults
DEFAULT_BANKROLL=100000.0
DEFAULT_BASE_STAKE_PERCENT=0.5
DEFAULT_MAX_LIABILITY_PERCENT=2.0
